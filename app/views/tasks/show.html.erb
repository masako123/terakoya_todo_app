<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @task.name %>
</p>

<p>
  <strong>Content:</strong>
  <%= @task.content %>
</p>

<% if @task.image.attached? %>
  <%= image_tag @task.image %>
<% end %>

<p>
  <strong>Deadline:</strong>
  <%= @task.deadline %>
</p>

<p>
  <strong>Assigned user:</strong>
  <%= @task.assignee.username %>
</p>

<p>
  <strong>User:</strong>
  <%= @task.user.username %>
</p>

<%= link_to 'Edit', edit_task_path(@task) %> |
